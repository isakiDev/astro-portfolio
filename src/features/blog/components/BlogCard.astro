---
import ChevronRight from "@shared/components/icons/ChevronRight.astro";

interface Props {
  href: string;
  title: string;
  date: string;
  description: string;
}

const { href, title, date, description } = Astro.props;
---

<article
  class="group relative flex flex-col gap-3 p-6 bg-card-dark rounded-xl border border-border-dark outline outline-transparent hover:outline-gray-700 transition-all duration-300"
>
  <a class="absolute inset-0 z-10" href={href}></a>

  <header class="flex items-start justify-between gap-4">
    <h3
      class="text-lg font-semibold text-text-dark group-hover:text-white transition-colors line-clamp-2"
    >
      {title}
    </h3>

    <time class="text-xs text-muted-dark-1 whitespace-nowrap shrink-0"
      >{date}</time
    >
  </header>

  <p class="text-sm text-muted-dark-1 line-clamp-2">
    {description}
  </p>

  <div
    class="mt-auto flex items-center text-xs text-muted-dark-1 group-hover:text-white transition-colors"
  >
    <span>Leer m√°s</span>

    <ChevronRight
      class={"size-3.5 ml-1 group-hover:translate-x-1 transition-transform"}
    />
  </div>
</article>
