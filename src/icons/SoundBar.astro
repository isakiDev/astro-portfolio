---
const bars = [
  { delay: 0, duration: 1200 },
  { delay: 150, duration: 1000 },
  { delay: 80, duration: 1100 },
  { delay: 200, duration: 950 },
  { delay: 100, duration: 1150 },
  { delay: 50, duration: 1200 },
];
---

<div class="flex items-end gap-1 h-8">
  {
    bars.map((bar) => (
      <span
        class="w-1 bg-green-500 rounded-full animate-eq"
        style={`
          animation-delay: ${bar.delay}ms;
          animation-duration: ${bar.duration}ms;
        `}
      />
    ))
  }
</div>

<style>
  @keyframes eq {
    0% {
      height: 30%;
    }
    20% {
      height: 70%;
    }
    40% {
      height: 50%;
    }
    60% {
      height: 90%;
    }
    80% {
      height: 40%;
    }
    100% {
      height: 60%;
    }
  }

  .animate-eq {
    animation-name: eq;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
  }
</style>
