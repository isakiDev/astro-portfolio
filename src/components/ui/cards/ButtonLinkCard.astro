---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const props = Astro.props;
---

<a
  {...props}
  target="_blank"
  class="inline-flex items-center justify-center rounded-xl bg-neutral-800 p-2 opacity-80 transition-opacity duration-150 hover:opacity-100 grow"
>
  <slot />
</a>
