---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { class: className, ...props } = Astro.props;

const default_class = `inline-flex items-center text-sm justify-center rounded-xl bg-neutral-800 px-3 py-2 text-neutral-50 opacity-85 transition-opacity duration-150 hover:opacity-100 hover:cursor-pointer font-semibold ${className} group`;
---

<a {...props} target="_blank" class={default_class}>
  <slot />
</a>
