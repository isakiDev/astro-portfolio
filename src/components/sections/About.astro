---
import { Image } from "astro:assets";

import BadgeWork from "@ui/WorkBadge.astro";
import SocialButtonLinks from "@ui/SocialButtonLinks.astro";
import ButtonLink from "@ui/ButtonLink.astro";

import FileExport from "@icons/FileExport.astro";
---

<section
  class="bg-card-dark p-8 rounded-2xl flex flex-col sm:flex-row items-center sm:gap-6 animate-pulse-fade-in animate-duration-500 relative"
>
  <figure class="self-end sm:-mb-8 -z-10 shrink-0">
    <picture>
      <source
        media="(min-width: 640px)"
        srcset="https://res.cloudinary.com/dzn3nempv/image/upload/v1758264381/portfolio/notebook_memoji_1_vq8cej.png"
      />

      <Image
        height={200}
        width={200}
        src="https://res.cloudinary.com/dzn3nempv/image/upload/v1758264380/portfolio/medidate_memoji_1_tncdtd.png"
        alt="Memoji Image Profile"
        class="size-60 object-cover absolute sm:static sm:size-48 bottom-0 right-0 sm:opacity-60 opacity-30"
      />
    </picture>
  </figure>

  <div class="flex flex-col gap-4">
    <header class="flex flex-wrap gap-2 sm:gap-0 items-center justify-between">
      <BadgeWork />
      <SocialButtonLinks />
    </header>

    <div class="space-y-1">
      <h1>Gaspar Castillo Catrifol</h1>
      <p>
        <strong class="text-green-200">Software Developer</strong> con una profunda
        pasión por las nuevas tecnologías y la innovación. Especializado en <strong
          class="text-green-200">Backend</strong
        >, pero con la ambición de expandir mis habilidades hacia el desarrollo
        FullStack. Mi objetivo es crear soluciones escalables que dejen una
        marca personal duradera.
      </p>
    </div>

    <footer class="ml-auto">
      <ButtonLink
        href="cv_gaspar_castillo.pdf"
        role="link"
        class={"outline-1 outline-dashed outline-gray-400 hover:outline-gray-200"}
      >
        <FileExport className="mr-1" />
        Mi CV
      </ButtonLink>
    </footer>
  </div>
</section>
