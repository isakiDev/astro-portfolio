---
import { Image } from "astro:assets";

import BadgeWork from "@ui/WorkBadge.astro";
import SocialLinks from "@ui/SocialLinks.astro";
import ButtonLink from "@ui/ButtonLink.astro";

import Download from "@icons/Download.astro";
---

<section
  class="bg-card-dark p-8 rounded-2xl flex flex-col sm:flex-row items-center sm:gap-6 animate-pulse-fade-in animate-duration-500 relative"
>
  <figure class="self-end sm:-mb-8 -z-10 shrink-0">
    <picture>
      <source
        media="(min-width: 640px)"
        srcset="https://res.cloudinary.com/dzn3nempv/image/upload/v1758264381/portfolio/notebook_memoji_1_vq8cej.png"
      />

      <Image
        height={200}
        width={200}
        src="https://res.cloudinary.com/dzn3nempv/image/upload/v1758264380/portfolio/medidate_memoji_1_tncdtd.png"
        alt="Memoji Image Profile"
        class="size-60 object-cover absolute sm:static sm:size-48 bottom-0 right-0 sm:opacity-60 opacity-30"
      />
    </picture>
  </figure>

  <div class="flex flex-col gap-4">
    <header class="flex flex-wrap gap-4 sm:gap-0 items-center justify-between">
      <BadgeWork />
      <SocialLinks />
    </header>

    <div>
      <h1>Gaspar Castillo Catrifol</h1>
      <span class="text-green-500 font-semibold">Software Developer</span>

      <p class="mt-2 leading-relaxed">
        Apasionado por el desarrollo de software, con foco en
        <span
          class="text-text-dark underline decoration-green-800 font-semibold underline-offset-4"
          >Backend</span
        > y en constante aprendizaje para crecer hacia FullStack. Me interesa construir
        soluciones s√≥lidas y mantenibles.
      </p>
    </div>

    <footer class="ml-auto">
      <ButtonLink
        href="cv_gaspar_castillo.pdf"
        role="link"
        class="bg-zinc-900 opacity-100 md:opacity-85 px-4 py-2 text-text-dark text-sm outline-1 outline-border-dark"
        }
      >
        <Download />
        Descargar CV
      </ButtonLink>
    </footer>
  </div>
</section>
