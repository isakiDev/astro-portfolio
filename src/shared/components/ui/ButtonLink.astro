---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { class: className, ...props } = Astro.props;

const defaultClasses = `inline-flex items-center justify-center opacity-85 transition-opacity duration-150 hover:opacity-100 hover:cursor-pointer ${className} group`;
---

<a {...props} class:list={[defaultClasses, className]}>
  <slot />
</a>
