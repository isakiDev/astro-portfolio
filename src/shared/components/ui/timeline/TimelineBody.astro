---
import type { TimelineData } from "@shared/types/time-line.interface";
import ButtonLink from "../ButtonLink.astro";
import ChevronRight from "@shared/components/icons/ChevronRight.astro";

interface Props {
  extraDetails: TimelineData["extraDetails"];
}

const { extraDetails } = Astro.props;
---

<ul
  class="mt-4 bg-zinc-800/30 py-4 px-6 rounded-xl border border-border-dark space-y-4"
>
  {
    extraDetails?.map(({ description, title, url }) => {
      return (
        <li>
          {title && (
            <h4 class="flex items-center gap-2 text-muted-dark-0 text-sm font-medium md:text-base">
              <span class="w-1 h-1 rounded-full bg-white" aria-hidden="true" />
              {title}
            </h4>
          )}

          <p>{description}</p>

          {url && (
            <ButtonLink
              target="_blank"
              class={
                "text-sm text-muted-dark-1 hover:text-text-dark gap-1 mt-4"
              }
              href={url}
            >
              <span>Ver detalles</span>

              <ChevronRight class="size-3.5 group-hover:translate-x-1 transition-transform" />
            </ButtonLink>
          )}
        </li>
      );
    })
  }
</ul>
